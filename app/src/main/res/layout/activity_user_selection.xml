<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey_90"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="30.0dip"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="90.0dip"
            android:layout_height="90.0dip"
            android:layout_gravity="center"
            android:src="@drawable/logo_round"
            android:tint="@android:color/white"
            android:transitionName="image" />

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip"
            android:text="EventO!"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:transitionName="text1"
            app:layout_constraintBottom_toTopOf="@id/student"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@color/grey_90"
            android:orientation="vertical">

            <TextView
                android:id="@+id/videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20.0dip"
                android:layout_marginEnd="20.0dip"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:text="I AM A.."
                android:textColor="@color/white"
                android:textSize="36.0sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/student" />

            <View
                android:layout_width="50.0dip"
                android:layout_height="1.0dip"
                android:layout_gravity="center"
                android:background="@color/white" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40.0dip"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/student"
                    android:layout_width="150.0dip"
                    android:layout_height="150.0dip"
                    android:layout_marginTop="8.0dip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView12"
                    app:srcCompat="@drawable/ic_book" />

                <ImageView
                    android:id="@+id/coordinator"
                    android:layout_width="150.0dip"
                    android:layout_height="150.0dip"
                    android:layout_marginTop="8.0dip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView13"
                    app:srcCompat="@drawable/ic_sports_and_competition" />

                <ImageView
                    android:id="@+id/studentSelection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/student"
                    app:layout_constraintEnd_toEndOf="@id/student"
                    app:srcCompat="@drawable/ic_sign_check" />

                <ImageView
                    android:id="@+id/coordinatorSelection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/coordinator"
                    app:layout_constraintEnd_toEndOf="@id/coordinator"
                    app:srcCompat="@drawable/ic_sign_check" />

                <TextView
                    android:id="@+id/textView12"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8.0dip"
                    android:text="STUDENT"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/student"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView13"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32.0dip"
                    android:text="COORDINATOR"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/student" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>